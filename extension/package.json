{
  "name": "type-buddy",
  "displayName": "Type Buddy",
  "description": "A simple extension to help you understand TypeScript types",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "imgs/typebuddy-icon.png",
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/typed-rocks/type-buddy/extension"
  },
  "contributes": {
    "languages": [
      {
        "id": "typeBuddyCustomTs",
        "aliases": [
          "Type Buddy TS"
        ],
        "extensions": [
          ".tb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "typeBuddyCustomTs",
        "scopeName": "source.ts",
        "path": "./syntaxes/TypeScript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "type-buddy.openViewer",
        "title": "Type Buddy: Open Type Viewer"
      },
      {
        "command": "type-buddy.openEditor",
        "title": "Type Buddy: Open Type Buddy File"
      },
      {
        "command": "type-buddy.showFunctionTypes",
        "title": "Type Buddy: Show Type Functions"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ts-morph": "^24.0.0"
  }
}
